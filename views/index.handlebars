<head>
    <link rel="stylesheet" href="/all.css">
    <link rel="stylesheet" href="/bootstrap.min.css">
    <title>{{title}}</title>
</head>
<body>
    <div class="container mt-4" id="main-container">
        <h1 class="display-4 text-center"><i class="fa fa-book text-primary"></i>{{title}}</h1>
        <form action="/api/members" method="POST" class="mb-4" id="book-form">
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" id="book-title" class="form-control" value="My Besto Friendo!">
            </div>
            <div class="form-group">
                <label for="author">Author</label>
                <input type="text" name="author" id="book-author" class="form-control" value="Greg Konnery">
            </div>
            <div class="form-group">
                <label for="pages">Pages</label>
                <input type="number" name="pages" id="book-pages" class="form-control" value="0">
            </div>
            <div class="form-group">
                <label for="isbn">ISBN</label>
                <input type="text" name="isbn" id="book-isbn" class="form-control" value="978-5-699-55699-1">
            </div>
                <input type="submit" id="addBook" value="Add Book" class="btn btn-primary btn-block">
        </form>
        <table class="table table-striped mt-5">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Pages</th>
                    <th>ISBN</th>
                </tr>
            </thead>
            <tbody id="book-list">
                {{#each items}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>{{this.author}}</td>
                        <td>{{this.pages}}</td>
                        <td>{{this.isbn}}</td>
                        <td>
                            <a href="/api/members/delete/{{this.id}}" 
                               class="btn btn-danger btn-sm delete" 
                               data-id="{{this.id}}">X</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/index.js"></script>
</body>